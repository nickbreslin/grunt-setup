{
    "debug": {
    	"options" : {
    		"beautify": true
    	},
        "files": {
            "build/script.debug.js": [
                "src/*.js"
            ]
        }
    },
    "minified": {
    	"options": {
            "mangle": true,
            "compress": {
                "screw_ie8": true,
                "sequences": true,
                "dead_code": true,
                "conditionals": true,
                "booleans": true,
                "unused": true,
                "if_return": true,
                "join_vars": true,
                "drop_console": true
            }
        },
        "files": {
            "build/script.min.js": [
                "src/*.js"
            ]
        }
    }
}